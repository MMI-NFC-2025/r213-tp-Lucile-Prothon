---
import { getImageUrl } from "../js/backend.mjs";
import { Image } from "astro:assets";

const { record, recordImage, width = 700, height = 500 } = Astro.props;

const imageURL = await getImageUrl(record, recordImage);
---

{
    imageURL && (
        <Image
            src={imageURL}
            class="w-full h-auto max-h-64 object-contain mx-auto margin: 10px"
            alt={record.nom_maison || "Image"}
            inferSize={true}
        />
    )
}
