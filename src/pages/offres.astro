---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import maison_1 from "public/maison_1..jpg";
const offres = [
    {
        adresse: "2821 Lake Sevilla, Palm Harbor, TX",
        favori: true,
        id: "64l3n8nar836i5j",
        nbChambres: 4,
        nbSdb: 2,
        nomMaison: "Beverly Springfield",
        prix: 2700,
        surface: 45,
        imgUrl: "./maison_1.jpg",
    },
    {
        adresse: "2699 Green Valley, Highland Lake",
        favori: true,
        id: "lo831zeg10hpm9y",
        nbChambres: 4,
        nbSdb: 2,
        nomMaison: "Palm Harbor",
        prix: 2095,
        surface: 42,
        imgUrl: "public/maison_2.jpg",
    },
    {
        adresse: "909 Woodland St, Michigan, IN",
        favori: false,
        id: "s1zuhj19x8eb242",
        nbChambres: 4,
        nbSdb: 3,
        nomMaison: "Faulkner Ave",
        prix: 4550,
        surface: 80,
        imgUrl: "public/maison_3.jpg",
    },
];
---

<Layout titre="Offres">
    <h1
        style="color: rgb(63, 205, 231); font-weight: bold; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; margin: 10px;font-size: large;"
    >
        Offres
    </h1>
    <p
        style="margin: 10px; font-weight: 500; font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;"
    >
        Consultez nos différentes offres de logement.
    </p>
    <div>
        {
            offres.map(
                (offre) => (
                    <ul>
                        <li>{offre.nomMaison}</li>
                        <li>{offre.adresse}</li>
                        <li>{offre.prix} € / mois</li>
                        <li>{offre.nbChambres} chambres</li>
                        <li>{offre.nbSdb} salles de bain</li>
                        <li>{offre.favori ? "❤️" : ""}</li>
                        <li>{offre.surface} m²</li>
                        <li>
                            <img src={offre.imgUrl} alt={offre.imgUrl} />
                        </li>
                    </ul>
                ),
                // afficher les nom des maisons sous forme de liste <ul>.
            )
        }
    </div>
</Layout>
<Footer />
